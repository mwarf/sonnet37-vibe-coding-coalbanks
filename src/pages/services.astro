---
import BaseLayout from "@/components/layout/BaseLayout.astro";
import { Button } from "@/components/ui/button";
import { AnimatedCard, CardHeader, CardContent, CardFooter, CardTitle, CardDescription } from "@/components/ui/animated-card";
import { motion } from "framer-motion";
import { fadeInUp, fadeIn, staggerContainer } from "@/lib/animations";
import { Film, Theater, Video, Camera, Search, PenTool, Play, Upload } from "lucide-react";

// Service categories
const services = [
  {
    id: "documentary",
    title: "Documentary Production",
    description: "In-depth storytelling that captures the essence of your subject with authenticity and care.",
    icon: Film,
    features: [
      "Research and story development",
      "On-location filming with professional crew",
      "Interview direction and cinematography",
      "Narrative structure development",
      "Professional editing and post-production",
      "Music licensing and sound design",
    ],
    caseStudy: {
      title: "Lethbridge Heritage Project",
      description: "A documentary series exploring the rich cultural history of Southern Alberta through the stories of long-time residents and historical archives.",
      results: "Screened at local film festivals and used by historical societies for education and preservation efforts.",
    },
  },
  {
    id: "brand-stories",
    title: "Brand Storytelling",
    description: "Compelling narratives that connect your audience to your brand's values and mission.",
    icon: Theater,
    features: [
      "Brand message consultation",
      "Authentic narrative development",
      "Customer and team interviews",
      "Behind-the-scenes footage",
      "Process documentation",
      "Multi-platform optimization",
    ],
    caseStudy: {
      title: "Mountain View Farms",
      description: "Created a series of authentic brand stories showcasing the family-owned farm's sustainable practices and connection to the land over generations.",
      results: "Increased direct-to-consumer sales by 35% and strengthened community engagement.",
    },
  },
  {
    id: "commercial",
    title: "Commercial Production",
    description: "High-quality video content that showcases your products and services with cinematic flair.",
    icon: Video,
    features: [
      "Concept development",
      "Storyboarding and pre-visualization",
      "Professional filming with cinema-quality equipment",
      "Product showcase techniques",
      "Motion graphics and visual effects",
      "Call-to-action optimization",
    ],
    caseStudy: {
      title: "Alberta Tech Innovations",
      description: "Produced a series of product commercials highlighting the company's innovative technology solutions with a focus on real-world applications.",
      results: "Videos achieved 3x higher engagement than industry average and supported successful product launch.",
    },
  },
  {
    id: "event-coverage",
    title: "Event Coverage",
    description: "Comprehensive documentation of your events, from intimate gatherings to large-scale productions.",
    icon: Camera,
    features: [
      "Multi-camera setup",
      "Live event capture",
      "Highlight reel creation",
      "Speaker and performance documentation",
      "Attendee interviews",
      "Same-day edit options for social media",
    ],
    caseStudy: {
      title: "Southern Alberta Arts Festival",
      description: "Provided complete coverage of the three-day festival, including performances, workshops, and attendee experiences.",
      results: "Created a festival highlight film that helped secure increased sponsorship for the following year's event.",
    },
  },
];

// Process steps
const process = [
  {
    number: "01",
    title: "Discovery",
    description: "We start by understanding your story, goals, and audience through in-depth conversations and research.",
    icon: Search,
  },
  {
    number: "02",
    title: "Planning",
    description: "Together, we develop a strategic approach, timeline, and creative direction for your project.",
    icon: PenTool,
  },
  {
    number: "03",
    title: "Production",
    description: "Our team captures authentic moments and interviews using professional equipment and documentary techniques.",
    icon: Camera,
  },
  {
    number: "04",
    title: "Post-Production",
    description: "We craft your story through careful editing, color grading, sound design, and motion graphics.",
    icon: Play,
  },
  {
    number: "05",
    title: "Delivery",
    description: "Your final video is optimized for your platforms of choice, with support for implementation and distribution.",
    icon: Upload,
  },
];

// Equipment/technology showcase
const equipment = [
  {
    category: "Cameras",
    items: ["RED Digital Cinema", "Sony FX6", "DJI Ronin 4D"],
  },
  {
    category: "Lenses",
    items: ["Cinema Prime Lenses", "Anamorphic Options", "Vintage Glass Collection"],
  },
  {
    category: "Movement",
    items: ["DJI Inspire 2 Drone", "Ronin 2 Gimbal", "Dana Dolly System"],
  },
  {
    category: "Audio",
    items: ["Sennheiser MKH416", "Wireless Lavalier Systems", "Field Recorders"],
  },
];
---

<BaseLayout title="Services | Coalbanks Creative">
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-muted/30 py-20 md:py-28">
    <div class="container-wide">
      <div class="max-w-3xl">
        <h1 class="heading-xl mb-6">Our Services</h1>
        <p class="body-lg text-muted-foreground mb-8">
          We use documentary techniques to capture what makes your organization genuinely special, creating authentic video content that resonates with your audience.
        </p>
        <Button client:visible size="lg">Get in Touch</Button>
      </div>
    </div>
  </section>
  
  <!-- Services Overview -->
  <section class="py-20 bg-background" id="services-overview">
    <div class="container-wide">
      <div class="text-center mb-16">
        <h2 class="heading-lg mb-4">What We Offer</h2>
        <p class="text-muted-foreground max-w-2xl mx-auto">
          From documentary production to commercial content, we bring authentic storytelling to every project.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {services.map((service, index) => (
          <AnimatedCard client:visible delay={index * 0.1}>
            <CardHeader>
              <service.icon className="h-10 w-10 mb-4 text-primary" />
              <CardTitle>{service.title}</CardTitle>
              <CardDescription>{service.description}</CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-start">
                    <span class="text-primary mr-2">✓</span>
                    <span class="text-muted-foreground">{feature}</span>
                  </li>
                ))}
              </ul>
            </CardContent>
            <CardFooter>
              <Button client:visible variant="outline" size="sm" class="w-full">
                <a href={`#${service.id}`}>Learn More</a>
              </Button>
            </CardFooter>
          </AnimatedCard>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Process Section -->
  <section class="py-20 bg-muted/30">
    <div class="container-wide">
      <div class="text-center mb-16">
        <h2 class="heading-lg mb-4">Our Process</h2>
        <p class="text-muted-foreground max-w-2xl mx-auto">
          We follow a collaborative approach to ensure your story is told authentically and effectively.
        </p>
      </div>
      
      <div class="relative">
        {/* Horizontal line for desktop */}
        <div class="hidden md:block absolute top-24 left-0 right-0 h-0.5 bg-border"></div>
        
        <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
          {process.map((step, index) => (
            <motion.div 
              client:visible
              initial="hidden"
              whileInView="visible"
              viewport={{ once: true }}
              variants={fadeInUp}
              transition={{ delay: index * 0.1 }}
              className="relative text-center"
            >
              <div class="relative z-10 w-16 h-16 mx-auto mb-6 rounded-full bg-primary text-primary-foreground flex items-center justify-center">
                <step.icon className="h-6 w-6" />
              </div>
              <h3 class="text-xl font-semibold mb-3">{step.title}</h3>
              <p class="text-muted-foreground">{step.description}</p>
            </motion.div>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Detailed Service Sections -->
  {services.map((service) => (
    <section class="py-20 bg-background" id={service.id}>
      <div class="container-wide">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <service.icon className="h-12 w-12 mb-4 text-primary" />
            <h2 class="heading-lg mb-6">{service.title}</h2>
            <div class="space-y-4 text-muted-foreground">
              <p>{service.description}</p>
              <h3 class="text-xl font-semibold text-foreground">What's Included:</h3>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-start">
                    <span class="text-primary mr-2">✓</span>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div class="mt-8">
              <Button client:visible size="lg">Discuss Your Project</Button>
            </div>
          </div>
          
          <div class="bg-muted/30 rounded-lg p-8">
            <h3 class="text-xl font-semibold mb-4">Case Study: {service.caseStudy.title}</h3>
            <p class="text-muted-foreground mb-4">{service.caseStudy.description}</p>
            <div class="bg-primary/10 p-4 rounded-md border border-primary/20">
              <h4 class="font-medium text-primary mb-2">Results</h4>
              <p class="text-muted-foreground">{service.caseStudy.results}</p>
            </div>
            <div class="mt-6">
              <Button client:visible variant="outline" size="sm">View Project</Button>
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}
  
  <!-- Equipment Section -->
  <section class="py-20 bg-muted/30">
    <div class="container-wide">
      <div class="text-center mb-16">
        <h2 class="heading-lg mb-4">Our Technology</h2>
        <p class="text-muted-foreground max-w-2xl mx-auto">
          We use professional equipment to ensure the highest quality production while maintaining our focus on authentic storytelling.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {equipment.map((category, index) => (
          <motion.div 
            client:visible
            initial="hidden"
            whileInView="visible"
            viewport={{ once: true }}
            variants={fadeInUp}
            transition={{ delay: index * 0.1 }}
            className="bg-background rounded-lg p-6 shadow-sm"
          >
            <h3 class="text-xl font-semibold mb-4">{category.category}</h3>
            <ul class="space-y-2">
              {category.items.map((item) => (
                <li class="text-muted-foreground">{item}</li>
              ))}
            </ul>
          </motion.div>
        ))}
      </div>
      
      <div class="mt-12 text-center">
        <p class="text-muted-foreground max-w-2xl mx-auto mb-6">
          While we're proud of our technical capabilities, we believe that the story always comes first. Our equipment serves the narrative, not the other way around.
        </p>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-primary text-primary-foreground">
    <div class="container-wide">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="heading-lg mb-6">Ready to tell your story?</h2>
        <p class="text-primary-foreground/80 text-lg mb-8">
          Let's discuss how we can help capture and share your authentic narrative.
        </p>
        <Button client:visible size="lg" variant="outline" class="bg-transparent border-primary-foreground text-primary-foreground hover:bg-primary-foreground/10">
          Start a Conversation
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
