    `
  }
];
---

<BaseLayout title="Terms of Service | Coalbanks Creative">
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-muted/30 py-20 md:py-28">
    <div class="container-wide">
      <div class="max-w-3xl">
        <h1 class="heading-xl mb-6">Terms of Service</h1>
        <p class="body-lg text-muted-foreground mb-8">
          Please read these terms carefully before using our website and services.
        </p>
        <p class="text-sm text-muted-foreground">Last Updated: {lastUpdated}</p>
      </div>
    </div>
  </section>
  
  <!-- Terms of Service Content -->
  <section class="py-20 bg-background">
    <div class="container-wide">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg max-w-none">
          {termsSections.map((section, index) => (
            <motion.div 
              client:visible
              initial="hidden"
              whileInView="visible"
              viewport={{ once: true }}
              variants={fadeInUp}
              transition={{ delay: index * 0.1 }}
              className="mb-12 last:mb-0"
            >
              <h2 class="heading-md mb-4">{section.title}</h2>
              <div class="text-muted-foreground" set:html={section.content} />
            </motion.div>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Contact Section -->
  <section class="py-20 bg-muted/30">
    <div class="container-wide">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="heading-lg mb-6">Questions About Our Terms?</h2>
        <p class="text-muted-foreground text-lg mb-8">
          If you have any questions or concerns about our terms of service, please don't hesitate to reach out.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button client:visible size="lg" href="/contact">
            Contact Us
          </Button>
          <Button client:visible size="lg" variant="outline" href="/privacy">
            View Privacy Policy
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
