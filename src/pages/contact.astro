---
import BaseLayout from "@/components/layout/BaseLayout.astro";
import { Button } from "@/components/ui/button";
import { motion } from "framer-motion";
import { fadeInUp, fadeIn } from "@/lib/animations";
import { Mail, Phone, MapPin, Instagram, Facebook, Linkedin, Video } from "lucide-react";

// Contact information
const contactInfo = {
  email: "hello@coalbanks.com",
  phone: "+1 (403) 555-1234",
  address: "123 Main Street, Lethbridge, AB T1J 1A1",
  socialMedia: [
    { platform: "Instagram", url: "https://instagram.com/coalbanks", icon: "instagram" },
    { platform: "Facebook", url: "https://facebook.com/coalbanks", icon: "facebook" },
    { platform: "LinkedIn", url: "https://linkedin.com/company/coalbanks", icon: "linkedin" },
    { platform: "Vimeo", url: "https://vimeo.com/coalbanks", icon: "vimeo" },
  ],
};

// FAQ items
const faqItems = [
  {
    question: "What types of projects do you work on?",
    answer: "We specialize in documentary-style video production, including brand stories, commercial content, event coverage, and documentary films. Our focus is on authentic storytelling that connects with audiences.",
  },
  {
    question: "What is your typical process for a new project?",
    answer: "Our process typically includes discovery (understanding your story and goals), planning (developing a strategic approach), production (capturing authentic moments), post-production (crafting your story), and delivery (optimizing for your platforms).",
  },
  {
    question: "How long does a typical project take to complete?",
    answer: "Project timelines vary based on complexity and scope. A brand story might take 4-6 weeks from concept to delivery, while a documentary project could span several months. We'll provide a detailed timeline during our initial consultation.",
  },
  {
    question: "Do you work outside of Southern Alberta?",
    answer: "While we're based in Lethbridge and have deep connections to Southern Alberta, we work on projects throughout Alberta and beyond. Our documentary approach travels well, and we're always excited to tell authentic stories wherever they may be.",
  },
  {
    question: "How do you price your services?",
    answer: "We develop custom quotes based on the specific needs of each project. Factors that influence pricing include production complexity, shooting days required, travel needs, and post-production requirements. Contact us for a personalized quote.",
  },
];
---

<BaseLayout title="Contact | Coalbanks Creative">
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-muted/30 py-20 md:py-28">
    <div class="container-wide">
      <div class="max-w-3xl">
        <h1 class="heading-xl mb-6">Get in Touch</h1>
        <p class="body-lg text-muted-foreground mb-8">
          Ready to tell your story? We'd love to hear from you and discuss how we can help capture the authentic moments that make your organization special.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Contact Form Section -->
  <section class="py-20 bg-background">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="heading-lg mb-6">Contact Us</h2>
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label for="first-name" class="text-sm font-medium">First Name</label>
                <input
                  type="text"
                  id="first-name"
                  name="first-name"
                  class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                  required
                />
              </div>
              <div class="space-y-2">
                <label for="last-name" class="text-sm font-medium">Last Name</label>
                <input
                  type="text"
                  id="last-name"
                  name="last-name"
                  class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                  required
                />
              </div>
            </div>
            
            <div class="space-y-2">
              <label for="email" class="text-sm font-medium">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                required
              />
            </div>
            
            <div class="space-y-2">
              <label for="organization" class="text-sm font-medium">Organization</label>
              <input
                type="text"
                id="organization"
                name="organization"
                class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
              />
            </div>
            
            <div class="space-y-2">
              <label for="project-type" class="text-sm font-medium">Project Type</label>
              <select
                id="project-type"
                name="project-type"
                class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
              >
                <option value="" selected disabled>Select a project type</option>
                <option value="documentary">Documentary</option>
                <option value="brand-story">Brand Story</option>
                <option value="commercial">Commercial</option>
                <option value="event">Event Coverage</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="space-y-2">
              <label for="message" class="text-sm font-medium">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="flex w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                required
              ></textarea>
            </div>
            
            <Button client:visible type="submit" size="lg" class="w-full md:w-auto">
              Send Message
            </Button>
          </form>
        </div>
        
        <!-- Contact Information -->
        <div>
          <h2 class="heading-lg mb-6">Contact Information</h2>
          
          <div class="space-y-8">
            <div>
              <h3 class="text-xl font-semibold mb-4">Get in Touch</h3>
              <ul class="space-y-4">
                <li class="flex items-start">
                  <div class="mr-3 text-primary">
                    <Mail className="h-5 w-5" />
                  </div>
                  <div>
                    <div class="font-medium">Email</div>
                    <a href={`mailto:${contactInfo.email}`} class="text-muted-foreground hover:text-primary transition-colors">
                      {contactInfo.email}
                    </a>
                  </div>
                </li>
                <li class="flex items-start">
                  <div class="mr-3 text-primary">
                    <Phone className="h-5 w-5" />
                  </div>
                  <div>
                    <div class="font-medium">Phone</div>
                    <a href={`tel:${contactInfo.phone.replace(/\D/g, '')}`} class="text-muted-foreground hover:text-primary transition-colors">
                      {contactInfo.phone}
                    </a>
                  </div>
                </li>
                <li class="flex items-start">
                  <div class="mr-3 text-primary">
                    <MapPin className="h-5 w-5" />
                  </div>
                  <div>
                    <div class="font-medium">Address</div>
                    <div class="text-muted-foreground">
                      {contactInfo.address}
                    </div>
                  </div>
                </li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-xl font-semibold mb-4">Follow Us</h3>
              <div class="flex space-x-4">
                {contactInfo.socialMedia.map((social) => (
                  <a
                    href={social.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={social.platform}
                    class="text-muted-foreground hover:text-foreground transition-colors"
                  >
                    <div class="h-10 w-10 rounded-full bg-muted flex items-center justify-center">
                      <span class="sr-only">{social.platform}</span>
                      {social.icon === "instagram" && <Instagram className="h-5 w-5" />}
                      {social.icon === "facebook" && <Facebook className="h-5 w-5" />}
                      {social.icon === "linkedin" && <Linkedin className="h-5 w-5" />}
                      {social.icon === "vimeo" && <Video className="h-5 w-5" />}
                    </div>
                  </a>
                ))}
              </div>
            </div>
            
            <div class="bg-muted/30 p-6 rounded-lg">
              <h3 class="text-xl font-semibold mb-4">Office Hours</h3>
              <ul class="space-y-2 text-muted-foreground">
                <li class="flex justify-between">
                  <span>Monday - Friday</span>
                  <span>9:00 AM - 5:00 PM</span>
                </li>
                <li class="flex justify-between">
                  <span>Saturday - Sunday</span>
                  <span>Closed</span>
                </li>
              </ul>
              <p class="mt-4 text-sm text-muted-foreground">
                We're also available for shoots outside of regular business hours as needed for your project.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Map Section -->
  <section class="py-20 bg-muted/30">
    <div class="container-wide">
      <h2 class="heading-lg mb-6 text-center">Find Us</h2>
      
      <div class="relative aspect-[16/9] w-full bg-muted rounded-lg overflow-hidden">
        {/* Placeholder for map */}
        <div class="absolute inset-0 flex items-center justify-center text-muted-foreground">
          <span class="text-2xl">Map of Lethbridge, Alberta</span>
        </div>
      </div>
    </div>
  </section>
  
  <!-- FAQ Section -->
  <section class="py-20 bg-background">
    <div class="container-wide">
      <h2 class="heading-lg mb-12 text-center">Frequently Asked Questions</h2>
      
      <div class="max-w-3xl mx-auto space-y-6">
        {faqItems.map((item, index) => (
          <motion.div 
            client:visible
            initial="hidden"
            whileInView="visible"
            viewport={{ once: true }}
            variants={fadeInUp}
            transition={{ delay: index * 0.1 }}
            className="border border-border rounded-lg overflow-hidden"
          >
            <div class="p-6">
              <h3 class="text-lg font-semibold mb-2">{item.question}</h3>
              <p class="text-muted-foreground">{item.answer}</p>
            </div>
          </motion.div>
        ))}
      </div>
      
      <div class="mt-12 text-center">
        <p class="text-muted-foreground mb-6">
          Have a question that's not answered here? Feel free to reach out to us directly.
        </p>
        <Button client:visible variant="outline">
          Contact Us
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
